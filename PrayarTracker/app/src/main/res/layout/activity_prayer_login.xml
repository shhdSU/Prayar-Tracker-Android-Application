<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/cardview_light_background"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logoimageView2"
        android:layout_width="wrap_content"
        android:layout_height="226dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="150dp"
        android:background="@drawable/emad_logo"
        android:translationX="80dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoimageView2"
        android:clickable="true"
        android:fontFamily="@font/changa"
        android:hint="البريد الإلكتروني"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:layout_marginTop="50dp"
         />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/changa"
        android:hint="كلمة المرور"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textAlignment="viewEnd"
        android:layout_below="@+id/Email"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/changa"
        android:text="تسجيل الدخول"
        android:textAlignment="center"
        android:textFontWeight="900"
        android:textSize="25dp"
        android:layout_marginTop="105dp"
        android:translationZ="3dp"
        android:layout_below="@+id/password"
         />

    <Button
        android:id="@+id/GoToRegister"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:fontFamily="@font/changa"
        android:text="ليس لديك حساب ؟ ،قم بإنشاء حساب"
        android:textAlignment="center"
        android:textColor="#8EACD0"
        android:textFontWeight="600"
        android:textSize="13dp"
        android:layout_below="@+id/login"

 />

    <Button
        android:id="@+id/login"
        android:layout_width="179dp"
        android:layout_height="133dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="84dp"
        android:background="@drawable/ic_button"
        android:fontFamily="@font/changa"
        android:textFontWeight="600"/>

<!--    <ProgressBar-->
<!--        android:id="@+id/loading"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:visibility="gone"-->
<!--       />-->


</RelativeLayout>