<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/settingbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_settings"
        android:onClick="goToSetting"
        android:translationX="140dp"
        android:translationY="-40dp" />


    <Button
        android:id="@+id/signputbutton"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/ic_icon_awesome_sign_out_alt"
        android:onClick="signOut"
        android:translationX="-140dp"
        android:translationY="-40dp" />

    <RelativeLayout
        android:id="@+id/timerParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="10dp">


        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/changa"
            android:text="متبقي على الصلاة القادمة:"
            android:textAlignment="center"
            android:textFontWeight="900"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/CountDownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerText"
            android:layout_centerInParent="true"
            android:fontFamily="@font/changa"
            android:text="00:00:00"
            android:textColor="#8EACD0"
            android:textFontWeight="600"
            android:textSize="45sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fajerParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/fajerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/fajerTextView"
            android:fontFamily="@font/changa"
            android:text="الفجر:"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fajerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/changa"
            android:text="00:00"
            android:textColor="#8EACD0"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/fajerimageView"
            android:layout_width="71dp"
            android:layout_height="43dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/fajerTextView"
            app:srcCompat="@drawable/ic_fajuricon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dhuhrParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/dhuhrTextView"
            android:fontFamily="@font/changa"
            android:text="الظهر:"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dhuhrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/changa"
            android:text="00:00"
            android:textColor="#8EACD0"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/dhuhrimageView"
            android:layout_width="71dp"
            android:layout_height="43dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/dhuhrTextView"
            app:srcCompat="@drawable/ic_dhohur" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/asrParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/asrTextView"
            android:fontFamily="@font/changa"
            android:text="العصر:"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/asrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/changa"
            android:text="00:00"
            android:textColor="#8EACD0"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/asrimageView"
            android:layout_width="71dp"
            android:layout_height="43dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/asrTextView"
            app:srcCompat="@drawable/ic_asur" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/maghribParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/maghribTextView"
            android:fontFamily="@font/changa"
            android:text="المغرب:"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/maghribTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/changa"
            android:text="00:00"
            android:textColor="#8EACD0"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/maghribimageView"
            android:layout_width="71dp"
            android:layout_height="43dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/maghribTextView"
            app:srcCompat="@drawable/ic_maghreb" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/IshaParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/IshaTextView"
            android:fontFamily="@font/changa"
            android:text="العشاء:"
            android:textFontWeight="600"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/IshaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/changa"
            android:text="00:00"
            android:textColor="#8EACD0"
            android:textFontWeight="600"
            android:textSize="25sp" />


        <ImageView
            android:id="@+id/IshaimageView"
            android:layout_width="71dp"
            android:layout_height="43dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/IshaTextView"
            app:srcCompat="@drawable/ic_isha" />

    </RelativeLayout>


